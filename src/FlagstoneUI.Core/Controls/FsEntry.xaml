<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls"
             x:Class="FlagstoneUI.Core.Controls.FsEntry"
             x:DataType="fs:FsEntry"
             x:Name="ViewWrapper">
  <ContentView.Resources>
    <Style TargetType="Border">
      <Setter Property="VisualStateManager.VisualStateGroups">
        <VisualStateGroupList>
          <VisualStateGroup>
            <VisualState x:Name="Focused">
              <VisualState.Setters>
                <Setter Property="Stroke" Value="{Binding BorderFocused}" />
              </VisualState.Setters>
            </VisualState>
          </VisualStateGroup>
        </VisualStateGroupList>
      </Setter>
    </Style>
  </ContentView.Resources>
  <!-- TODO: Add global XML usings -->
  <Border x:Name="WrapperBorder"
          BackgroundColor="{Binding BackgroundColor}"
          Stroke="{Binding BorderColor}"
          StrokeThickness="{Binding BorderWidth}"
          StrokeShape="{Binding BorderShape}">
    <Border.Triggers>
        <DataTrigger Binding="{Binding Source={x:Reference InnerEntry}, Path=IsFocused}"
                      TargetType="Border"
                      Value="True">
            <Setter Property="Stroke" Value="{Binding BorderFocused}" />
        </DataTrigger>
    </Border.Triggers>
    <Grid Padding="{Binding Padding}">
      <fs:BorderlessEntry Text="{Binding Text}"
                          Placeholder="{Binding Placeholder}"
                          TextColor="{Binding TextColor}"
                          TextChanged="OnTextChanged"
                          Completed="OnCompleted"
                          FontSize="{Binding FontSize}"
                          HorizontalTextAlignment="{Binding HorizontalTextAlignment}"
                          VerticalTextAlignment="{Binding VerticalTextAlignment}"
                          IsPassword="{Binding IsPassword}"
                          Keyboard="{Binding Keyboard}"
                          x:Name="InnerEntry"/>
    </Grid>
  </Border>
</ContentView>
