<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FlagstoneUI.Core.Controls"
             x:DataType="controls:FsCard"
             x:Class="FlagstoneUI.Core.Controls.FsCard"
             x:Name="CardControl">
    <ContentView.ControlTemplate>
        <ControlTemplate x:Name="CardTemplate">
            <Border BackgroundColor="{Binding Source={x:Reference CardControl}, Path=BackgroundColor}"
                    Stroke="{Binding Source={x:Reference CardControl}, Path=BorderColor}"
                    StrokeThickness="{Binding Source={x:Reference CardControl}, Path=BorderWidth}"
                    Padding="{Binding Source={x:Reference CardControl}, Path=Padding}"
                    x:Name="CardBorder">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="{Binding Source={x:Reference CardControl}, Path=CornerRadius}"
                                    x:Name="CardBorderShape"/>
                </Border.StrokeShape>
                <ContentPresenter  />
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
