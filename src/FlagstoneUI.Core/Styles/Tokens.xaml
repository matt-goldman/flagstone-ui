    <x:Double x:Key="Padding.None">0</x:Double>
    <x:Double x:Key="Padding.Small">4</x:Double>
    <x:Double x:Key="Padding.Medium">8</x:Double>
    <x:Double x:Key="Padding.Large">16</x:Double>
    <x:Double x:Key="Padding.ExtraLarge">24</x:Double>

    <!-- State layer opacity tokens -->
    <x:Double x:Key="StateLayer.Hover">0.08</x:Double>
    <x:Double x:Key="StateLayer.Focus">0.12</x:Double>
    <x:Double x:Key="StateLayer.Pressed">0.12</x:Double>
    <x:Double x:Key="StateLayer.Dragged">0.16</x:Double>

    <!-- Opacity tokens -->
    <x:Double x:Key="Opacity.Disabled">0.38</x:Double>
    <x:Double x:Key="Opacity.Medium">0.74</x:Double>
    <x:Double x:Key="Opacity.High">0.87</x:Double>
    <x:Double x:Key="Opacity.Full">1.0</x:Double>
