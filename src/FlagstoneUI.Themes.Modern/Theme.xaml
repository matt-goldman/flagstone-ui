<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
                    xmlns:tokens="clr-namespace:FlagstoneUI.Core.Styles;assembly=FlagstoneUI.Core"
                    x:Class="FlagstoneUI.Themes.Modern.Theme">
  <ResourceDictionary.MergedDictionaries>
    <tokens:Tokens />
  </ResourceDictionary.MergedDictionaries>
  
  <!-- Modern theme specific overrides and additional styles -->
  <Style TargetType="Label">
    <Setter Property="TextColor" Value="#222222" />
  </Style>

  <Style TargetType="fs:FsCard">
    <Setter Property="Padding" Value="{DynamicResource Space.12}" />
    <Setter Property="BackgroundColor" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="{DynamicResource Radius.Large}" />
    <Setter Property="BorderColor" Value="#E0E0E0" />
  </Style>
 
</ResourceDictionary>
