<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core">
  <ResourceDictionary.MergedDictionaries>
    <!-- TODO: Fix resource reference to Tokens.xaml - see issue #12 -->
    <!-- <ResourceDictionary Source="/FlagstoneUI.Core;component/Styles/Tokens.xaml" /> -->
  </ResourceDictionary.MergedDictionaries>
  
  <!-- Local token definitions until cross-component resource references are fixed -->
  <x:Double x:Key="Space.12">12</x:Double>
  <x:Double x:Key="Radius.Large">12</x:Double>
  <Style TargetType="Label">
    <Setter Property="TextColor" Value="#222222" />
  </Style>

  <Style TargetType="fs:Card">
    <Setter Property="Padding" Value="{DynamicResource Space.12}" />
    <Setter Property="BackgroundColor" Value="#FFFFFF" />
    <Setter Property="CornerRadius" Value="{DynamicResource Radius.Large}" />
    <Setter Property="BorderColor" Value="#E0E0E0" />
  </Style>
</ResourceDictionary>
