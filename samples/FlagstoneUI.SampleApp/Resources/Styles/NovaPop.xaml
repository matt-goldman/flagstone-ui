<?xaml-comp compile="true"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fs="clr-namespace:FlagstoneUI.Core.Controls;assembly=FlagstoneUI.Core"
                    x:Class="FlagstoneUI.SampleApp.Resources.Styles.NovaPop">
  
  <!-- primary -->
  <Color x:Key="Primary">#6750FF</Color>
  <Color x:Key="OnPrimary">#FFFFFF</Color>
  <Color x:Key="PrimaryContainer">#E7DEFF</Color>
  <Color x:Key="OnPrimaryContainer">#22006B</Color>
  
    <!-- secondary -->
  <Color x:Key="Secondary">#FF7A4F</Color>
  <Color x:Key="OnSecondary">#FFFFFF</Color>
  <Color x:Key="SecondaryContainer">#FFE2D5</Color>
  <Color x:Key="OnSecondaryContainer">#3B1300</Color>
  
    <!-- tertiary -->
  <Color x:Key="Tertiary">#00C6A2</Color>
  <Color x:Key="OnTertiary">#00382D</Color>
  <Color x:Key="TertiaryContainer">#B8FFE9</Color>
  <Color x:Key="OnTertiaryContainer">#002118</Color>
  
    <!-- error -->
  <Color x:Key="Error">#D90036</Color>
  <Color x:Key="OnError">#FFFFFF</Color>
  <Color x:Key="ErrorContainer">#FFD7DA</Color>
  <Color x:Key="OnErrorContainer">#300007</Color>
  
    <!-- surface / background -->
  <Color x:Key="Surface">#FFFFFF</Color>
  <Color x:Key="OnSurface">#1C1C28</Color>
  <Color x:Key="SurfaceVariant">#F3F0FA</Color>
  <Color x:Key="OnSurfaceVariant">#48455A</Color>
  <Color x:Key="Background">#FAFAFF</Color>
  <Color x:Key="OnBackground">#1C1C28</Color>
  
    <!-- outline -->
  <Color x:Key="Outline">#79758A</Color>
  <Color x:Key="OutlineVariant">#CAC4DD</Color>
  
    <!-- inverse (optional) -->
  <Color x:Key="InverseSurface">#2C2C3A</Color>
  <Color x:Key="InverseOnSurface">#F2F2FF</Color>
  <Color x:Key="InversePrimary">#C2B5FF</Color>
  
  <!--=== Controls Styles ===-->
  
  <!-- ====== FsButton (one unified variant) ====== -->
  <Style TargetType="fs:FsButton" x:Key="NovaButtonStyle">
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Primary}" />
    <Setter Property="TextColor" Value="{DynamicResource Color.OnPrimary}" />
    <Setter Property="CornerRadius" Value="{DynamicResource Radius.Large}" />
    <Setter Property="FontSize" Value="{DynamicResource FontSize.LabelLarge}" />
    <Setter Property="Padding" Value="24,10" />
    <Setter Property="HeightRequest" Value="44" />
    <Setter Property="BorderWidth" Value="0" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="VisualStateManager.VisualStateGroups">
      <VisualStateGroupList>
        <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Normal" />
          <VisualState x:Name="Disabled">
            <VisualState.Setters>
              <Setter Property="Opacity" Value="{DynamicResource Opacity.Disabled}" />
            </VisualState.Setters>
          </VisualState>
        </VisualStateGroup>
      </VisualStateGroupList>
    </Setter>
  </Style>

  <!-- ====== FsCard ====== -->
  <Style TargetType="fs:FsCard" x:Key="NovaCardStyle">
    <Setter Property="BackgroundColor" Value="{DynamicResource Color.Surface}" />
    <Setter Property="BorderColor" Value="Transparent" />
    <Setter Property="BorderWidth" Value="{DynamicResource BorderWidth.None}" />
    <Setter Property="CornerRadius" Value="{DynamicResource Radius.Medium}" />
    <Setter Property="Padding" Value="{DynamicResource Space.16}" />
    <Setter Property="Elevation" Value="2" />
  </Style>

  <!-- ====== FsEntry ====== -->
  <Style TargetType="fs:FsEntry" x:Key="NovaEntryStyle">
    <Setter Property="Background">
      <Setter.Value>
        <SolidColorBrush Color="{DynamicResource Color.SurfaceVariant}" />
      </Setter.Value>
    </Setter>
    <Setter Property="TextColor" Value="{DynamicResource Color.OnSurface}" />
    <Setter Property="PlaceholderColor" Value="{DynamicResource Color.OnSurfaceVariant}" />
    <Setter Property="CornerRadius" Value="{DynamicResource Radius.Small}" />
    <Setter Property="FontSize" Value="{DynamicResource FontSize.BodyMedium}" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="HeightRequest" Value="52" />
    <Setter Property="BorderWidth" Value="0" />
  </Style>
  
</ResourceDictionary>

